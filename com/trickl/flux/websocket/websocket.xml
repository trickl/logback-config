<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="WEBSOCKET_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_PATH}/websocket.log</file>
    <if condition='isDefined("NEW_RELIC")'>
      <then>
        <encoder class="com.newrelic.logging.logback.NewRelicEncoder"/>
      </then>
      <else>
        <encoder>
          <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>
        </encoder>
      </else>
    </if>

    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>
                ${LOG_PATH}/archived/websocket_%d{dd-MM-yyyy}_%i.log
      </fileNamePattern>
      <maxFileSize>10MB</maxFileSize>
      <maxHistory>10</maxHistory>
      <totalSizeCap>100MB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <if condition='isDefined("NEW_RELIC")'>
    <then>   
      <appender name="NEW_RELIC_WEBSOCKET_FILE" class="com.newrelic.logging.logback.NewRelicAsyncAppender">
        <appender-ref ref="WEBSOCKET_FILE" />
      </appender>

      <logger level="INFO" name="com.trickl.flux.websocket">
        <appender-ref ref="NEW_RELIC_WEBSOCKET_FILE" />
      </logger>
    </then>
    <else>    
      <logger level="INFO" name="com.trickl.flux.websocket">
        <appender-ref ref="WEBSOCKET_FILE" />
      </logger>
    </else>
  </if>
</configuration>
